<section class="container">
  <h1>Welcome to your Articles Page</h1>

  <ol>
    <% @articles.each do |article| %>

      <li>
        <%= link_to article.title, article %>
        <%= article.created_at %>

        <%= link_to 'Edit', edit_article_path(article), class: "button tiny [radius round]" %>

        <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "button tiny [radius round]" %>

      </li>

  <% end %>
  </ol>

  <div class="row">
    <div class="small-4 columns">
      <%= link_to 'New Article', new_article_path, class: "button tiny [radius round]" %>
    </div>
  </div>
</section>
