
<div id="show">

<!-- article-->
	<div id="show_article">
		<div class="row centered">
			<div class="small-11 small-centered panel columns">					
				<div class="panel">
				  <h1><u><%= @article.title %></u></h1>
				  <p>&nbsp &nbsp &nbsp &nbsp<%= @article.text %></p>
				</div>  
	      <p id="right">	<%= link_to 'Edit', edit_article_path(@article), class: "button small [radius round]"%> </p>
			</div>
		</div>
	</div>

	<div id="show_magellan">  
	  <div data-magellan-expedition="fixed">
			<dl class="sub-nav">
			  <dd data-magellan-arrival="show_comment"><a href="#show_article"><%= @article.title %></a></dd>
			  <dd>|</dd>
			  <dd data-magellan-arrival="new_comment"><a href="#show_comment">Comments</a></dd> 
			  <dd>|</dd>
			  <dd data-magellan-arrival="new_comment"><a href="#new_comment">New Comment</a></dd>
			</dl>
		</div>
	</div>

<!-- comments -->
	
	<div id="show_comment" class="row centered">
		<a name="show_comment"></a>
		<div class="small-10 small-offset-1 panel columns">
			<%= render @article.comments %>
			</div>
	</div>

  <a name="new_comment"></a>
	<div id="new_comment">
		<div class="row">
			<div class="small-10 small-offset-1 panel columns">
				<h3><center>Add a comment</center></h3>
				<%= render "comments/form" %>
			</div>
		</div>
	</div>
		


	<!-- <%= link_to 'Show All', articles_path, class: "button small [radius round]" %>  -->

</div>	<!-- end show -->