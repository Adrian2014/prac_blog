              <ul class="dropdown">
                <li><a href="/#articles">Articles</a></li>
                <li><a href="/#contact">Contact</a></li>
              </ul>
            </li>
    
    <% if current_user != nil %>
            <li><%= link_to "Welcome " + current_user.username.capitalize, controller: "users", action: "show" %></li>
